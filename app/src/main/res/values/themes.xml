<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/main_blue</item>
        <item name="android:navigationBarColor">@color/main_blue</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Base.Theme.NewsApp.NewTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/main_blue</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.SplashScreen.New" parent="Theme.SplashScreen">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowSplashScreenBackground">@color/main_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/inset_image</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.NewsApp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/darker_blue</item>
    </style>
</resources>